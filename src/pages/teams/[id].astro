---
export function getStaticPaths() {
    const teams = [
        "ARI",
        "ATL",
        "BAL",
        "BUF",
        "CAR",
        "CHI",
        "CIN",
        "CLE",
        "DAL",
        "DEN",
        "DET",
        "GB",
        "HOU",
        "IND",
        "JAX",
        "KC",
        "LAC",
        "LAR",
        "LV",
        "MIA",
        "MIN",
        "NE",
        "NO",
        "NYG",
        "NYJ",
        "PHI",
        "PIT",
        "SF",
        "SEA",
        "TB",
        "TEN",
        "WAS",
    ];

    return teams.map((id) => ({
        params: { id },
    }));
}

const { id } = Astro.params;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>NFL Clock - {id}</title>
        <link rel="icon" type="image/x-icon" href={`/${id}/logo.png`} />
        <style define:vars={{ bannerUrl: `url("/${id}/banner.png")` }}>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                background: linear-gradient(135deg, #f5f5f0 0%, #e8e5f0 100%);
                font-family:
                    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                    Oxygen, Ubuntu, Cantarell, sans-serif;
                padding: 20px;
            }

            .card {
                border-radius: 20px;
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
                overflow: hidden;
                max-width: 500px;
                width: 100%;
            }

            .banner-container {
                width: 100%;
                height: 180px;
                display: flex;
                justify-content: center;
                align-items: center;
                background-image: var(--bannerUrl);
                background-size: cover;
            }

            .banner {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .logo {
                width: 90px;
                height: 90px;
                background: white;
                border-radius: 50%;
                padding: 12px;
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
                object-fit: contain;
            }

            .content {
                background: white;
                padding: 40px 30px 30px;
                text-align: center;
            }

            .team-name {
                font-size: 28px;
                font-weight: 700;
                color: #1a202c;
                margin-bottom: 20px;
                letter-spacing: -0.5px;
            }

            .countdown-label {
                font-size: 12px;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: #718096;
                margin-bottom: 10px;
            }

            .countdown {
                display: flex;
                justify-content: center;
                gap: 15px;
                margin-bottom: 15px;
            }

            .countdown-item {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .countdown-value {
                font-size: 48px;
                font-weight: 700;
                color: #667eea;
                line-height: 1;
                margin-bottom: 8px;
            }

            .countdown-unit {
                font-size: 12px;
                font-weight: 600;
                text-transform: uppercase;
                color: #a0aec0;
                letter-spacing: 0.5px;
            }

            .game-info {
                margin-top: 30px;
                padding-top: 30px;
                border-top: 2px solid #e2e8f0;
            }

            .opponent {
                font-size: 18px;
                color: #4a5568;
                font-weight: 500;
            }

            .game-time {
                font-size: 14px;
                color: #718096;
                margin-top: 8px;
            }
        </style>
    </head>
    <body>
        <div class="card">
            <div class="banner-container">
                <img src={`/${id}/logo.png`} alt={`${id} logo`} class="logo" />
            </div>

            <div class="content">
                <h1 class="team-name">{id}</h1>

                <div class="countdown-label">Next Game In</div>

                <div class="countdown">
                    <div class="countdown-item">
                        <div class="countdown-value">3</div>
                        <div class="countdown-unit">Days</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value">14</div>
                        <div class="countdown-unit">Hours</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value">27</div>
                        <div class="countdown-unit">Minutes</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value">45</div>
                        <div class="countdown-unit">Seconds</div>
                    </div>
                </div>

                <div class="game-info">
                    <div class="opponent">vs. Opponent Team</div>
                    <div class="game-time">
                        Sunday, October 20, 2025 at 1:00 PM ET
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
