            }

            .card {
                border-radius: 20px;
                box-shadow: 0 20px 60px var(--shadow-xl);
                overflow: hidden;
                max-width: 500px;
                width: 100%;
            }

            @media (max-width: 768px) {
                body {
                    padding: 0;
                    align-items: stretch;
                }

                .card {
                    border-radius: 0;
                    max-width: 100%;
                    height: 100vh;
                    display: flex;
                    flex-direction: column;
                }

                .content {
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    justify-content: start;
                }
            }

            .banner-container {
                width: 100%;
                height: 180px;
                display: flex;
                justify-content: center;
                align-items: center;
                background-image: var(--bannerUrl);
                background-size: cover;
                position: relative;
            }

            .back-button-tap-area {
                position: absolute;
                top: 20px;
                left: 20px;
                /* Increase tap target without increasing visual size */
                padding: 32px;
                margin: -32px;
            }

            .back-button {
                background: var(--bg-white-overlay);
                border: none;
                border-radius: 50%;
                width: 40px;
                height: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                box-shadow: 0 4px 12px var(--shadow-md);
                transition: all 0.2s ease;
                text-decoration: none;
                color: var(--text-secondary);
            }

            .back-button-tap-area:hover .back-button {
                background: var(--bg-white);
                box-shadow: 0 6px 16px var(--shadow-lg);
                transform: translateY(-2px);
            }

            .back-button svg {
                width: 20px;
                height: 20px;
            }

            .banner {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .logo {
                background: var(--bg-white);
                border-radius: 50%;
                padding: 12px;
                box-shadow: 0 8px 24px var(--shadow-md);
                object-fit: contain;
            }

            .content {
                background: var(--bg-white);
                padding: 40px 30px 30px;
                text-align: center;
            }

            .team-name {
                font-size: var(--font-xl);
                font-weight: 700;
                color: var(--text-primary);
                margin-bottom: 20px;
                letter-spacing: -0.5px;
            }

            .countdown-label {
                font-size: var(--font-xs);
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: var(--text-muted);
                margin-bottom: 10px;
            }

            .countdown {
                display: flex;
                justify-content: center;
                gap: 15px;
                margin-bottom: 15px;
            }

            .countdown-item {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .countdown-value {
                font-size: var(--font-3xl);
                font-weight: 700;
                color: var(--accent-primary);
                line-height: 1;
                margin-bottom: 8px;
            }

            .countdown-unit {
                font-size: var(--font-xs);
                font-weight: 600;
                text-transform: uppercase;
                color: var(--text-light);
                letter-spacing: 0.5px;
            }

            .game-info {
                margin-top: 30px;
                padding-top: 30px;
                border-top: 2px solid var(--border-light);
            }

            .opponent {
                font-size: var(--font-lg);
                color: var(--text-secondary);
                font-weight: 500;
            }

            .game-time {
                font-size: var(--font-sm);
                color: var(--text-muted);
                margin-top: 8px;
            }

            .alarm-section {
                margin-top: 20px;
                padding-top: 20px;
                border-top: 2px solid var(--border-light);
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
            }

            .alarm-checkbox {
                width: 18px;
                height: 18px;
                cursor: pointer;
                accent-color: var(--accent-primary);
            }

            .alarm-label {
                font-size: var(--font-sm);
                color: var(--text-secondary);
                font-weight: 500;
                cursor: pointer;
                user-select: none;
            }
            .hidden {
                display: none !important;
            }
        </style>
    </head>
    <body>
        <div class="card">
            <div class="banner-container">
                <a
                    href="/teams"
                    class="back-button-tap-area"
                    aria-label="Back to teams"
                >
                    <div class="back-button">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </div>
                </a>
                <Image
                    src={`/teams/${team.id}/logo.png`}
                    alt={`${team.name} logo`}
                    width="90"
                    height="90"
                    class="logo"
                />
            </div>

            <div class="content">
                <h1 class="team-name">{team.name}</h1>

                <div class="countdown-label">Next Game In</div>

                <div
                    class="countdown"
                    data-game-date={gameDetails?.date.toISOString()}
                >
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-days">
                            --
                        </div>
                        <div class="countdown-unit">Days</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-hours">
                            --
                        </div>
                        <div class="countdown-unit">Hours</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-minutes">
                            --
                        </div>
                        <div class="countdown-unit">Minutes</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-seconds">
                            --
                        </div>
                        <div class="countdown-unit">Seconds</div>
                    </div>
                </div>

                <div class="game-info">
                    <div class="opponent">
                        vs. {gameDetails?.opponent ?? "Unknown Opponent"}
                    </div>
                    <div
                        class="game-time"
                        data-game-date={gameDetails?.date?.toISOString()}
                    >
                        {
                            gameDetails
                                ? `${gameDetails.gameDate} at ${gameDetails.gameTime}`
                                : "No games scheduled. Check back later."
                        }
                    </div>
                </div>

                <div class="alarm-section hidden" id="alarm-section">
                    <input
                        type="checkbox"
                        id="alarm-checkbox"
                        class="alarm-checkbox"
                        data-team-id={team.id}
                    />
                    <label for="alarm-checkbox" class="alarm-label">
                        Alert me 5 minutes before kickoff
                    </label>
                </div>
            </div>
        </div>

        <script>
            // Render game time in user's local timezone
            const gameTimeElement = document.querySelector(".game-time")!;
            const dataGameDate = gameTimeElement.getAttribute("data-game-date");

            if (dataGameDate) {
                const gameDate = new Date(dataGameDate);

                const formattedDate = gameDate.toLocaleDateString("en-US", {
                    weekday: "long",
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                });

                const formattedTime = gameDate.toLocaleTimeString("en-US", {
                    hour: "numeric",
                    minute: "2-digit",
                    timeZoneName: "short",
                });
                console.log("Loading...");

                gameTimeElement.textContent = `${formattedDate} at ${formattedTime}`;
            }
        </script>

        <script>
            // Dynamic countdown timer
            const countdownElement = document.querySelector(".countdown")!;
            const dataGameDate =
                countdownElement.getAttribute("data-game-date");

            if (dataGameDate) {
                const targetDate = new Date(dataGameDate);

                const daysEl = document.getElementById("countdown-days")!;
                const hoursEl = document.getElementById("countdown-hours")!;
                const minutesEl = document.getElementById("countdown-minutes")!;
                const secondsEl = document.getElementById("countdown-seconds")!;

                function updateCountdown() {
                    const now = new Date().getTime();
                    const distance = targetDate.getTime() - now;

                    if (distance < 0) {
                        daysEl.textContent = "0";
                        hoursEl.textContent = "0";
                        minutesEl.textContent = "0";
                        secondsEl.textContent = "0";
                        return;
                    }

                    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                    const hours = Math.floor(
                        (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
                    );
                    const minutes = Math.floor(
                        (distance % (1000 * 60 * 60)) / (1000 * 60),
                    );
                    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                    daysEl.textContent = days.toString().padStart(2, "0");
                    hoursEl.textContent = hours.toString().padStart(2, "0");
                    minutesEl.textContent = minutes.toString().padStart(2, "0");
                    secondsEl.textContent = seconds.toString().padStart(2, "0");
                }

                // Update immediately and then every second
                updateCountdown();
                setInterval(updateCountdown, 1000);
            }
        </script>

        <script>
            import { isTauri, invoke } from "@tauri-apps/api/core";

            // Show alarm section only in Tauri
            if (isTauri()) {
                const alarmSection = document.getElementById("alarm-section")!;
                alarmSection.classList.remove("hidden");
            }

            // Alarm functionality
            const alarmCheckbox = document.getElementById(
                "alarm-checkbox",
            ) as HTMLInputElement;
            const teamId = alarmCheckbox.getAttribute("data-team-id")!;
            const countdownElement = document.querySelector(".countdown")!;
            const gameDate = new Date(
                countdownElement.getAttribute("data-game-date")!,
            );
            let alarmTimeout: number | null = null;

            function scheduleAlarm() {
                if (!isTauri()) {
                    return;
                }

                // Clear any existing alarm timeout
                if (alarmTimeout !== null) {
                    clearTimeout(alarmTimeout);
                    alarmTimeout = null;
                }

                if (!alarmCheckbox.checked) {
                    return;
                }

                const now = new Date().getTime();
                const alarmTime = gameDate.getTime() - 5 * 60 * 1000; // 5 minutes before game
                const timeUntilAlarm = alarmTime - now;

                if (timeUntilAlarm > 0) {
                    // Schedule the alarm
                    alarmTimeout = window.setTimeout(
                        () => invoke("play_alarm"),
                        timeUntilAlarm,
                    );
                } else if (timeUntilAlarm > -60 * 1000 * 5) {
                    // If we're less than 5 minute past the alarm time, play it now
                    invoke("play_alarm");
                }
            }

            scheduleAlarm();

            alarmCheckbox.addEventListener("change", () => {
                if (alarmCheckbox.checked) {
                    scheduleAlarm();
                } else {
                    // Cancel the scheduled alarm
                    if (alarmTimeout !== null) {
                        clearTimeout(alarmTimeout);
                        alarmTimeout = null;
                    }
                }
            });
        </script>

        <script>
            // Reload page every 24 hours to fetch fresh game data
            setTimeout(
                () => {
                    window.location.reload();
                },
                24 * 60 * 60 * 1000,
            ); // 24 hours in milliseconds
        </script>
    </body>
</html>
