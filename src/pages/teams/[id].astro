import z from "zod";
import { teams } from "../../teams";

export async function getStaticPaths() {
    // Fetch schedule once for all teams
    const response = await fetch(
        `https://api.sportsblaze.com/nfl/v1/schedule/season/2025.json?key=${import.meta.env.SPORTS_BLAZE_API_KEY}`,
    );

    if (!response.ok) {
        throw Error(
            `[${response.status}] Error fetching schedule: ${await response.text().catch(() => null)}`,
        );
    }

    const allGames = z
        .object({
            games: z.array(
                z.object({
                    season: z.object({
                        type: z.string(),
                    }),
                    teams: z.object({
                        away: z.object({
                            name: z.string(),
                        }),
                        home: z.object({
                            name: z.string(),
                        }),
                    }),
                    date: z.coerce.date(),
                    status: z.string(),
                }),
            ),
        })
        .parse(await response.json());

    return teams.map((team) => ({
        params: {
            id: team.id,
        },
        props: {
            allGames,
        },
    }));
}

const { id } = Astro.params;
const { allGames } = Astro.props;

const team = teams.find((team) => team.id === id);

if (!team) {
    throw Error(`Missing team: ${id}`);
}

const nextGame = allGames.games
    .filter(
        (game) =>
            game.teams.away.name === team.name ||
            game.teams.home.name === team.name,
    )
    .filter(
        (game) => game.status !== "Final" && game.date.getTime() > Date.now(),
    )
    .at(0);

if (!nextGame) {
    throw Error(`No next game for team ${id}: ${JSON.stringify(allGames)}`);
}

let opponent: string =
    nextGame.teams.home.name === team.name
        ? nextGame.teams.away.name
        : nextGame.teams.home.name;

// Format game date/time
const gameDate = nextGame.date.toLocaleDateString("en-US", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
});
const gameTime = nextGame.date.toLocaleTimeString("en-US", {
    hour: "numeric",
    minute: "2-digit",
    timeZoneName: "short",
});
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>NFL Clock - {team.name}</title>
        <link rel="icon" type="image/x-icon" href={`/${team.id}/logo.png`} />
        <style
            define:vars={{
                bannerUrl: `url("/${team.id}/banner.png")`,
            }}
        >
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                background: linear-gradient(135deg, #f5f5f0 0%, #e8e5f0 100%);
                font-family:
                    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                    Oxygen, Ubuntu, Cantarell, sans-serif;
                padding: 20px;
            }

            .card {
                border-radius: 20px;
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
                overflow: hidden;
                max-width: 500px;
                width: 100%;
            }

            @media (max-width: 768px) {
                body {
                    padding: 0;
                    align-items: stretch;
                }

                .card {
                    border-radius: 0;
                    max-width: 100%;
                    height: 100vh;
                    display: flex;
                    flex-direction: column;
                }

                .content {
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    justify-content: start;
                }
            }

            .banner-container {
                width: 100%;
                height: 180px;
                display: flex;
                justify-content: center;
                align-items: center;
                background-image: var(--bannerUrl);
                background-size: cover;
            }

            .banner {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .logo {
                width: 90px;
                height: 90px;
                background: white;
                border-radius: 50%;
                padding: 12px;
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
                object-fit: contain;
            }

            .content {
                background: white;
                padding: 40px 30px 30px;
                text-align: center;
            }

            .team-name {
                font-size: 28px;
                font-weight: 700;
                color: #1a202c;
                margin-bottom: 20px;
                letter-spacing: -0.5px;
            }

            .countdown-label {
                font-size: 12px;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: #718096;
                margin-bottom: 10px;
            }

            .countdown {
                display: flex;
                justify-content: center;
                gap: 15px;
                margin-bottom: 15px;
            }

            .countdown-item {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .countdown-value {
                font-size: 48px;
                font-weight: 700;
                color: #667eea;
                line-height: 1;
                margin-bottom: 8px;
            }

            .countdown-unit {
                font-size: 12px;
                font-weight: 600;
                text-transform: uppercase;
                color: #a0aec0;
                letter-spacing: 0.5px;
            }

            .game-info {
                margin-top: 30px;
                padding-top: 30px;
                border-top: 2px solid #e2e8f0;
            }

            .opponent {
                font-size: 18px;
                color: #4a5568;
                font-weight: 500;
            }

            .game-time {
                font-size: 14px;
                color: #718096;
                margin-top: 8px;
            }

            .alarm-section {
                margin-top: 20px;
                padding-top: 20px;
                border-top: 2px solid #e2e8f0;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
            }

            .alarm-checkbox {
                width: 18px;
                height: 18px;
                cursor: pointer;
                accent-color: #667eea;
            }

            .alarm-label {
                font-size: 14px;
                color: #4a5568;
                font-weight: 500;
                cursor: pointer;
                user-select: none;
            }
        </style>
    </head>
    <body>
        <div class="card">
            <div class="banner-container">
                <img
                    src={`/${team.id}/logo.png`}
                    alt={`${team.name} logo`}
                    class="logo"
                />
            </div>

            <div class="content">
                <h1 class="team-name">{team.name}</h1>

                <div class="countdown-label">Next Game In</div>

                <div
                    class="countdown"
                    data-game-date={nextGame.date.toISOString()}
                >
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-days">
                            --
                        </div>
                        <div class="countdown-unit">Days</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-hours">
                            --
                        </div>
                        <div class="countdown-unit">Hours</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-minutes">
                            --
                        </div>
                        <div class="countdown-unit">Minutes</div>
                    </div>
                    <div class="countdown-item">
                        <div class="countdown-value" id="countdown-seconds">
                            --
                        </div>
                        <div class="countdown-unit">Seconds</div>
                    </div>
                </div>

                <div class="game-info">
                    <div class="opponent">vs. {opponent}</div>
                    <div
                        class="game-time"
                        data-game-date={nextGame.date.toISOString()}
                    >
                        {gameDate} at {gameTime}
                    </div>
                </div>

                <div class="alarm-section">
                    <input
                        type="checkbox"
                        id="alarm-checkbox"
                        class="alarm-checkbox"
                        data-team-id={team.id}
                    />
                    <label for="alarm-checkbox" class="alarm-label">
                        Alert me 5 minutes before kickoff
                    </label>
                </div>
            </div>
        </div>
        <script>
            // Render game time in user's local timezone
            const gameTimeElement = document.querySelector(".game-time")!;
            const gameDate = new Date(
                gameTimeElement.getAttribute("data-game-date")!,
            );

            const formattedDate = gameDate.toLocaleDateString("en-US", {
                weekday: "long",
                year: "numeric",
                month: "long",
                day: "numeric",
            });
            const formattedTime = gameDate.toLocaleTimeString("en-US", {
                hour: "numeric",
                minute: "2-digit",
                timeZoneName: "short",
            });

            gameTimeElement.textContent = `${formattedDate} at ${formattedTime}`;
        </script>

        <script>
            // Dynamic countdown timer
            const countdownElement = document.querySelector(".countdown")!;
            const targetDate = new Date(
                countdownElement.getAttribute("data-game-date")!,
            );

            const daysEl = document.getElementById("countdown-days")!;
            const hoursEl = document.getElementById("countdown-hours")!;
            const minutesEl = document.getElementById("countdown-minutes")!;
            const secondsEl = document.getElementById("countdown-seconds")!;

            function updateCountdown() {
                const now = new Date().getTime();
                const distance = targetDate.getTime() - now;

                if (distance < 0) {
                    daysEl.textContent = "0";
                    hoursEl.textContent = "0";
                    minutesEl.textContent = "0";
                    secondsEl.textContent = "0";
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor(
                    (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
                );
                const minutes = Math.floor(
                    (distance % (1000 * 60 * 60)) / (1000 * 60),
                );
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                daysEl.textContent = days.toString().padStart(2, "0");
                hoursEl.textContent = hours.toString().padStart(2, "0");
                minutesEl.textContent = minutes.toString().padStart(2, "0");
                secondsEl.textContent = seconds.toString().padStart(2, "0");
            }

            // Update immediately and then every second
            updateCountdown();
            setInterval(updateCountdown, 1000);
        </script>

        <script>
            // Reload page every 24 hours to fetch fresh game data
            setTimeout(
                () => {
                    window.location.reload();
                },
                24 * 60 * 60 * 1000,
            ); // 24 hours in milliseconds
        </script>

        <script>
            // Alarm functionality
            const alarmCheckbox = document.getElementById(
                "alarm-checkbox",
            ) as HTMLInputElement;
            const teamId = alarmCheckbox.getAttribute("data-team-id")!;
            const countdownElement = document.querySelector(".countdown")!;
            const gameDate = new Date(
                countdownElement.getAttribute("data-game-date")!,
            );
            let alarmAudio: HTMLAudioElement;
            let alarmTimeout: number | null = null;

            // Check if team-specific alarm exists, otherwise use default
            async function initializeAlarm() {
                const teamAlarmPath = `/${teamId}/alarm.mp3`;
                const defaultAlarmPath = "/alarm.mp3";

                try {
                    const response = await fetch(teamAlarmPath, {
                        method: "HEAD",
                    });
                    if (response.ok) {
                        alarmAudio = new Audio(teamAlarmPath);
                    } else {
                        alarmAudio = new Audio(defaultAlarmPath);
                    }
                } catch {
                    alarmAudio = new Audio(defaultAlarmPath);
                }
            }

            function scheduleAlarm() {
                // Clear any existing alarm timeout
                if (alarmTimeout !== null) {
                    clearTimeout(alarmTimeout);
                    alarmTimeout = null;
                }

                if (!alarmCheckbox.checked || !alarmAudio) {
                    return;
                }

                const now = new Date().getTime();
                const alarmTime = gameDate.getTime() - 5 * 60 * 1000; // 5 minutes before game
                const timeUntilAlarm = alarmTime - now;

                if (timeUntilAlarm > 0) {
                    // Schedule the alarm
                    alarmTimeout = window.setTimeout(() => {
                        alarmAudio.currentTime = 0;
                        alarmAudio.play().catch((error) => {
                            console.error("Failed to play alarm:", error);
                        });
                    }, timeUntilAlarm);
                } else if (timeUntilAlarm > -60 * 1000) {
                    // If we're less than 1 minute past the alarm time, play it now
                    alarmAudio.currentTime = 0;
                    alarmAudio.play().catch((error) => {
                        console.error("Failed to play alarm:", error);
                    });
                }
            }

            initializeAlarm().then(() => {
                // Check alarm state on page load
                scheduleAlarm();
            });

            alarmCheckbox.addEventListener("change", () => {
                if (alarmCheckbox.checked) {
                    scheduleAlarm();
                } else {
                    // Cancel the scheduled alarm
                    if (alarmTimeout !== null) {
                        clearTimeout(alarmTimeout);
                        alarmTimeout = null;
                    }
                }
            });
        </script>
    </body>
</html>
